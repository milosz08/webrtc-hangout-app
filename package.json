{
  "name": "video-hangout-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "signal-server"
  ],
  "scripts": {
    "dev:client": "cd client && yarn run dev",
    "dev:signal-server": "cd signal-server && yarn run dev",
    "build:client": "cd client && yarn run build",
    "build:signal-server": "cd signal-server && yarn run build",
    "build:app": "yarn run build:signal-server && yarn run build:client",
    "lint:client": "cd client && yarn run lint",
    "lint:signal-server": "cd signal-server && yarn run lint",
    "husky:add-pre-commit": "npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "configure:husky": "npx husky install && yarn run husky:add-pre-commit"
  },
  "lint-staged": {
    "client/src/**/*.{js,cjs,mjs}": [
      "yarn run lint:client"
    ],
    "server/src/**/*.{js,cjs,mjs}": [
      "yarn run lint:server"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0"
  },
  "resolutions": {
    "cross-spawn": "^7.0.5",
    "path-to-regexp": "^0.1.12",
    "nanoid": "^3.3.8",
    "@babel/runtime": "^7.26.10",
    "@babel/helpers": "^7.26.10"
  },
  "dependencies": {}
}
